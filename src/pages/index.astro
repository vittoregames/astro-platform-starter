<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>TFI: Expreso Bisonte</title>

    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        background: #f3f3f3;
        color: #222;
      }

      /* Header */
      header {
        text-align: center;
        padding: 30px 20px 25px;
        background: #ffffff;
        border-bottom: 1px solid #ddd;
      }

      header h1 {
        margin: 0;
        font-size: 32px;
      }

      header h2 {
        margin: 8px 0 0;
        font-weight: normal;
        color: #555;
      }

      .image-placeholder {
        margin: 20px auto 0;
        width: 300px;
        height: 160px;
        border: 2px dashed #bbb;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #888;
        font-size: 14px;
      }

      /* Main content */
      main {
        max-width: 1100px;
        margin: 30px auto;
        padding: 0 20px;
      }

      /* Tabs */
      .tabs {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-bottom: 20px;
        flex-wrap: wrap;
      }

      .tab {
        padding: 10px 18px;
        border: 1px solid #ccc;
        background: #ffffff;
        cursor: pointer;
        border-radius: 4px;
        transition: all 0.2s ease;
      }

      .tab:hover {
        background: #f0f0f0;
      }

      .tab.active {
        background: #e0e0e0;
        font-weight: bold;
        border-color: #999;
      }

      /* PDF */
      iframe {
        width: 100%;
        height: 80vh;
        border: 1px solid #ccc;
        background: #fff;
      }
    </style>
  </head>

  <body>

    <!-- Header -->
    <header>
      <h1>TFI: Expreso Bisonte</h1>
      <h2>Documentos</h2>

      <div class="image-placeholder">
        <img 
   src="/images/8byjLYResoYR6mob5CaZ.png.webp" 
  alt="TFI Expreso Bisonte"
  style="max-width:300px; margin-top:20px;"
        />
      </div>
    </header>

    <!-- Main -->
    <main>

      <!-- Tabs -->
      <div class="tabs">
        <div class="tab active" onclick="showPDF('DocTest1.pdf', this)">
          Documento 1
        </div>
        <div class="tab" onclick="showPDF('DocTest1.pdf', this)">
          Documento 2
        </div>
        <div class="tab" onclick="showPDF('DocTest1.pdf', this)">
          Documento 3
        </div>
        <div class="tab" onclick="showPDF('DocTest1.pdf', this)">
          Documento 4
        </div>
        <div class="tab" onclick="showPDF('DocTest1.pdf', this)">
          Documento 5
        </div>
      </div>

      <!-- PDF Viewer -->
      <iframe id="pdfViewer" src="/Archivos/DocTest1.pdf"></iframe>

    </main>

    <!-- Script -->
    <script is:inline>
      function showPDF(file, elem) {
        document.getElementById("pdfViewer").src = "/Archivos/" + file;

        document.querySelectorAll(".tab").forEach(tab => {
          tab.classList.remove("active");
        });

        elem.classList.add("active");
      }
    </script>

  </body>
</html>
