<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Documentos</title>

    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }

      .tabs {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
      }

      .tab {
        padding: 10px 15px;
        border: 1px solid #ccc;
        background: #f5f5f5;
        cursor: pointer;
      }

      .tab.active {
        background: #ddd;
        font-weight: bold;
      }

      iframe {
        width: 100%;
        height: 80vh;
        border: 1px solid #ccc;
      }
    </style>
  </head>

  <body>
    <h1>Documentos</h1>

    <!-- Tabs -->
    <div class="tabs">
      <div class="tab active" onclick="showPDF('doc1.pdf', this)">Documento 1</div>
      <div class="tab" onclick="showPDF('doc2.pdf', this)">Documento 2</div>
      <div class="tab" onclick="showPDF('doc3.pdf', this)">Documento 3</div>
      <div class="tab" onclick="showPDF('doc4.pdf', this)">Documento 4</div>
      <div class="tab" onclick="showPDF('doc5.pdf', this)">Documento 5</div>
    </div>

    <!-- PDF Viewer -->
    <iframe id="pdfViewer" src="/pdfs/doc1.pdf"></iframe>

    <script>
      function showPDF(file, element) {
        document.getElementById("pdfViewer").src = "/pdfs/" + file;

        document.querySelectorAll(".tab").forEach(tab => {
          tab.classList.remove("active");
        });

        element.classList.add("active");
      }
    </script>
  </body>
</html>
