<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>TFI: Expreso Bisonte</title>

    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        background: #f3f3f3;
        color: #222;
      }

      /* Header */
      header {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        padding: 30px 40px;
        background: #ffffff;
        border-bottom: 1px solid #ddd;
      }

      .header-text {
        grid-column: 2;
        text-align: center;
      }

      header h1 {
        margin: 0;
        font-size: 32px;
      }

      header h2 {
        margin: 8px 0 0;
        font-weight: normal;
        color: #555;
      }

      .header-image {
        grid-column: 3;
        justify-self: end;
      }

      .header-image img {
        max-width: 180px;
        height: auto;
      }

      /* Responsive header */
      @media (max-width: 768px) {
        header {
          grid-template-columns: 1fr;
          text-align: center;
          row-gap: 20px;
        }

        .header-text {
          grid-column: 1;
        }

        .header-image {
          grid-column: 1;
          justify-self: center;
        }

        .header-image img {
          max-width: 140px;
        }
      }

      /* Main content */
      main {
        max-width: 1100px;
        margin: 30px auto;
        padding: 0 20px;
      }

      /* Tabs */
      .tabs {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-bottom: 20px;
        flex-wrap: wrap;
      }

      .tab {
        padding: 10px 18px;
        border: 1px solid #ccc;
        background: #ffffff;
        cursor: pointer;
        border-radius: 4px;
        transition: all 0.2s ease;
      }

      .tab:hover {
        background: #f0f0f0;
      }

      .tab.active {
        background: #e0e0e0;
        font-weight: bold;
        border-color: #999;
      }

      /* PDF */
      iframe {
        width: 100%;
        height: 80vh;
        border: 1px solid #ccc;
        background: #fff;
      }
    </style>
  </head>

  <body>

    <!-- Header -->
    <header>
      <div class="header-text">
        <h1>TFI: Expreso Bisonte</h1>
        <h2>Documentos</h2>
      </div>

      <div class="header-image">
        <img 
          src="/images/8byjLYResoYR6mob5CaZ.png.webp" 
          alt="TFI Expreso Bisonte"
        />
      </div>
    </header>

    <!-- Main -->
    <main>

      <!-- Tabs -->
      <div class="tabs">
        <div class="tab active" onclick="showPDF('TFIP1.pdf', this)">
          Parte 1
        </div>
        <div class="tab" onclick="showPDF('TFIP2.pdf', this)">
          Parte 2
        </div>
        <div class="tab" onclick="showPDF('TFIP3.pdf', this)">
          Parte 3
        </div>
        <div class="tab" onclick="showPDF('TFIP4.pdf', this)">
          Parte 4
        </div>
        <div class="tab" onclick="showPDF('Notas.pdf', this)">
          Notas
        </div>
      </div>

      <!-- PDF Viewer -->
      <iframe id="pdfViewer" src="/Archivos/TFIP1.pdf"></iframe>

    </main>

    <!-- Script -->
    <script is:inline>
      function showPDF(file, elem) {
        document.getElementById("pdfViewer").src = "/Archivos/" + file;

        document.querySelectorAll(".tab").forEach(tab => {
          tab.classList.remove("active");
        });

        elem.classList.add("active");
      }
    </script>

  </body>
</html>
